<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/pms_product_info_layout"
    android:layout_marginTop="12sp"
    android:background="@color/white"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/inv_floor_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7sp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="7sp"
        android:layout_marginBottom="2sp"
        app:cardCornerRadius="9sp"
        app:cardElevation="1sp"
        app:strokeWidth="0sp">

        <LinearLayout
            android:id="@+id/floor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="7sp"
                android:fontFamily="@font/dm_sans_medium"
                android:paddingTop="14sp"
                android:paddingBottom="14sp"
                android:text="@string/floor"
                android:textColor="@color/light_dark"
                android:textSize="12.14sp" />

            <TextView
                android:id="@+id/tv_floor_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="@font/dm_sans_medium"
                android:maxLength="3"
                android:maxLines="1"
                android:paddingTop="14sp"
                android:paddingBottom="14sp"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="14.33sp" />

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="7sp"
                android:fontFamily="@font/dm_sans_medium"
                android:paddingTop="14sp"
                android:paddingBottom="14sp"
                android:text="@string/area"
                android:textColor="@color/light_dark"
                android:textSize="12.14sp" />

            <TextView
                android:id="@+id/tv_area_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_sans_medium"
                android:paddingTop="14sp"
                android:paddingBottom="14sp"
                android:text="@string/value"
                android:maxLength="11"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14.33sp" />

            <TextView
                android:id="@+id/tv_inv_rack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="7sp"
                android:fontFamily="@font/dm_sans_medium"
                android:paddingTop="14sp"
                android:paddingBottom="14sp"
                android:text="@string/rack"
                android:textColor="@color/light_dark"
                android:textSize="12.14sp" />

            <TextView
                android:id="@+id/tv_inv_rack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/dm_sans_medium"
                android:paddingTop="14sp"
                android:paddingBottom="14sp"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="14.33sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="0sp"
                android:layout_weight="1"
                android:paddingBottom="0sp">

                <LinearLayout
                    android:layout_width="50sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/inv_floor_item_bg"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_shelf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="6sp"
                        android:fontFamily="@font/dm_sans_medium"
                        android:text="@string/shelf"
                        android:textColor="@color/fab_progress_color"
                        android:textSize="11.23sp" />

                    <TextView
                        android:id="@+id/tv_shelf_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/dm_sans_bold"
                        android:text="@string/_0"
                        android:textColor="@color/fab_progress_color"
                        android:textSize="16.71sp" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>